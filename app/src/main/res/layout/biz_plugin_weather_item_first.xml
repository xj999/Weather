<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/biz_weather_padding" >

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15.0dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@color/hhh"
        android:textSize="40.0sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/city"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@color/hhh"
        android:textSize="15.0sp" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/time"
        android:layout_marginLeft="15.0dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@color/hhh"
        android:textSize="15.0sp" />

    <LinearLayout
        android:id="@+id/pm2_5_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_plugin_weather_qing" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pm2_5_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/week_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@color/hhh"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week_today"
            android:layout_marginLeft="15dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@color/hhh"
            android:textSize="@dimen/biz_plugin_weather_temperature_textsize" />

        <TextView
            android:id="@+id/climate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature"
            android:layout_marginLeft="15dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@color/hhh"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/climate"
            android:layout_marginLeft="15dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@color/hhh"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="N/A"
                android:textColor="@color/hhh"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>